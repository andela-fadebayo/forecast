$('#list_item_<%= @todo_item.id %>').find('ul.items').addClass('complete-item');
$('.status').html('<%= @todo_item.item %> completed successfully!');

flashCallback = function(_this) {
    $('.status').fadeOut();
};
$('.status').bind('click', function(e) {
    flashCallback();
});
setTimeout(flashCallback, 4000);
