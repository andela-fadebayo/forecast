if ($('#list_item_<%= @todo_item.id %>').find('tr.items').hasClass('complete-item')) {
  $('#list_item_<%= @todo_item.id %>').find('tr.items').removeClass('complete-item');
  $('.status').html('<%= @todo_item.item %> item not completed.');
} else {
  $('#list_item_<%= @todo_item.id %>').find('tr.items').addClass('complete-item');
  $('.status').html('<%= @todo_item.item %> completed successfully!');
}

flashCallback = function(_this) {
    $('.status').fadeOut();
};
$('.status').bind('click', function(e) {
    flashCallback();
});
setTimeout(flashCallback, 4000);
