#form-box
  .header
    %h2
      %i.fa.fa-file-text-o
      Register
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .body
      .form-group
        .fore-input= f.text_field :first_name, autofocus: true, placeholder: 'First Name', class: 'form-control'
      .form-group
        .fore-input= f.text_field :last_name, placeholder: 'Last Name', class: 'form-control'
      .form-group
        = f.select(:sex, [['Male', 'Male'], ['Female', 'Female']], {}, {class: 'form-control'})
      .form-group
        .form-inline
          .fore-input= f.date_select(:birthday, {start_year: 1900}, {class: 'form-control'})
      .form-group
        .control-label.image-label
          = f.label :image, 'Upload a profile picture'
        .fore-input= f.file_field :image, class: 'form-control'
      %br/
      .form-group
        .fore-input= f.text_field :username, placeholder: 'Username', class: 'form-control'
      .form-group
        .fore-input= f.email_field :email, placeholder: 'E-mail', class: 'form-control'
      .form-group
        .fore-input= f.password_field :password, autocomplete: 'off', placeholder: "Password (#{@minimum_password_length} characters minimum)", class: 'form-control'
      .form-group
        .fore-input= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Confirm Password', class: 'form-control'
    .footer
      .fore-login-btn.text-center
        .btn
          = f.submit 'Create'
    .social-login
      - if controller_name != 'sessions'
        = link_to "I am already a register user", new_session_path(resource_name)
      %br/
      %br/
      .text-center
        %h5 Or Register with...
        = link_to(guest_omniauth_authorize_path(:google_oauth2), class: 'google-btn') do
          .btn-social.btn-google-plus
            %i.fa.fa-google-plus
            Google
        %h5 or
        = link_to(guest_omniauth_authorize_path(:facebook), class: 'facebook-btn') do
          .btn-social.btn-facebook
            %i.fa.fa-facebook
            Facebook
  %br/
  %br/
