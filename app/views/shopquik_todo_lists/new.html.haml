= render 'shared/notification'
%h2 New List
= form_for(@todo_list) do |td|
  - if @todo_list.errors.any?
    #error_explanation
      %h2
        = pluralize(@todo_list.errors.count, 'error')
        Prohibited this todo_list from being saved:
      %ul
        - @todo_list.errors.full_messages.each do |msg|
          %li= msg
  .field
    = td.text_field :title, placeholder: 'List Title (YYYY Month)'
  .field
    = td.text_area :description, placeholder: 'List Description'
  .actions
    = td.submit


= link_to 'Back to Lists', shopquik_todo_lists_path